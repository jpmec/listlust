<h1>Listing lists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Private</th>
    <th>Status</th>
    <th>Edit datetime</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.name %></td>
    <td><%= list.author %></td>
    <td><%= list.private %></td>
    <td><%= list.status %></td>
    <td><%= list.edit_datetime %></td>
    <td><%= list.content %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

